@model List<WorkingTableListDto>
@{
    TempData["Title"] = "İşler";
    int counter = 0;
}
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="text-dark">
                Dashboard /
            </a>
        </span>
        @TempData["Title"]
    </h4>

    <div class="card">
        <div class="card-header">
            <a asp-area="Admin" asp-controller="Working" asp-action="Create" class="btn btn-primary">
                <i class="bx bx-plus"></i>
                İş Ekle
            </a>
        </div>
        <div class="table-responsive text-nowrap">
            <table class="table table-hover table-striped table-bordered">
                <thead>
                    <tr>
                        <th class="col-1 text-center">Id</th>
                        <th>Tanım</th>
                        <th class="col-1 text-center">Kategori</th>
                        <th class="col-1 text-center">Oluşturma Tarihi</th>
                        <th class="col-1 text-center">Personel</th>
                        <th class="col-1 text-center">Rapor Sayısı</th>
                        <th class="col-1 text-center">İşlem</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var item in Model)
                    {
                        counter++;
                        <tr>
                            <td class="text-center">@counter</td>
                            <td>@item.Definition</td>
                            <td class="text-center">@item.Category.Definition</td>
                            <td class="text-center">@item.CreatedDate.ToString("dd.MM.yyyy HH:mm")</td>
                            <td class="text-center">
                                @{
                                    if (item.AppUser is null)
                                    {
                                        <span class="badge bg-label-warning">Çalışan personel yok</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-label-warning">@item.AppUser.UserName</span>
                                    }
                                }
                            </td>
                            <td class="text-center">@item.Reportings.Count</td>
                            <td class="text-center">
                                @{
                                    if (item.AppUser is null)
                                    {
                                        <button class="btn btn-info">
                                            Personel Ata
                                        </button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-default">
                                            Detay göster
                                        </button>
                                    }
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>