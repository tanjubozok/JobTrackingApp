@model PersonWorkingViewModel
@{
    TempData["Title"] = "Personele Görev Ata Onay";
}
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-1">
        <span class="text-muted fw-light">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="text-dark">
                Dashboard /
            </a>
            <a asp-area="Admin" asp-controller="Working" asp-action="GetAllTable" class="text-dark">
                Görevler Ata/
            </a>
            <a asp-area="Admin" asp-controller="Working" asp-action="SetPersonnel2" asp-route-id="@Model.Work!.Id" class="text-dark">
                Personele Görev Ata /
            </a>
        </span>
        @TempData["Title"]
    </h4>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <h5 class="card-header">
                    @TempData["Title"]
                </h5>
                <div class="card-body">
                    <div class="mb-3 col-12 mb-0">
                        <div class="alert alert-warning">
                            <div class="alert-heading fw-bold mb-1">
                                Kullanıcı adı: @Model.AppUser!.UserName
                                <br />
                                Görev Adı: @Model.Work.Definition
                                <br />
                                görevini atmak istediğinize emin misiniz?
                            </div>
                        </div>
                    </div>
                    <form asp-area="Admin" asp-controller="Working" asp-action="AssignTask" method="post">
                        <input type="hidden" asp-for="Work.Id" />
                        <input type="hidden" asp-for="AppUser.Id" />
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" asp-for="CheckTask">
                            <label class="form-check-label" asp-for="CheckTask">
                                Onay
                            </label>
                        </div>
                        <button type="submit" class="btn btn-danger deactivate-account">
                            <i class="bx bx-user-check"></i>
                            Görevi Ata
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>