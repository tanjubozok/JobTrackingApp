@model WorkingListViewModel
@{
    TempData["Title"] = "Personel Ata";
    string search = (string)ViewBag.Search;
}
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="text-dark">
                Dashboard /
            </a>
        </span>
        <span class="text-muted fw-light">
            <a asp-area="Admin" asp-controller="Working" asp-action="GetAllTable" class="text-dark">
                İş Ata /
            </a>
        </span>
        @TempData["Title"]
    </h4>

    <div class="row">
        @if (!string.IsNullOrEmpty(search))
        {
            <div class="col-12">
                <div class="alert alert-primary alert-dismissible" role="alert">
                    <strong>"@search"</strong> için sonuçlar listelenmiştir.
                    <a asp-area="Admin"
                   asp-controller="Working"
                   asp-action="SetPersonel2"
                   asp-route-id="@Model.WorkingListDto.Id" class="float-end">
                        <strong>Filtreyi kaldır</strong>
                    </a>
                </div>
            </div>
        }
        <div class="col-3 mb-4">
            <div class="card">
                <div class="d-flex align-items-end row">
                    <div class="card-body">
                        <h5 class="card-title text-primary">İşin Adı</h5>
                        <p class="mb-3">
                            @Model.WorkingListDto.Definition
                        </p>
                        <hr />
                        <h5 class="card-title text-primary">İşin Açıklaması</h5>
                        <p class="mb-3">
                            @Model.WorkingListDto.Description
                        </p>
                        <hr />
                        <h5 class="card-title text-primary">Kategorisi</h5>
                        <p class="mb-3">
                            <span class="badge bg-label-warning rounded-pill">
                                @Model.WorkingListDto.Category?.Definition
                            </span>
                        </p>
                        <hr />
                        <h5 class="card-title text-primary">Oluşturma Tarihi</h5>
                        <p class="mb-3">
                            @Model.WorkingListDto.CreatedDate.ToString("dd.MM.yyyy HH.mm")
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-9">
            <div class="row mb-3">
                <form asp-area="Admin" asp-controller="Working" asp-action="SetPersonel2" method="get" class="d-flex">
                    @if (!string.IsNullOrEmpty(search))
                    {
                        <input class="form-control me-2" type="search" placeholder="arama..." aria-label="arama" name="s" value="@search">
                    }
                    else
                    {
                        <input class="form-control me-2" type="search" placeholder="arama..." aria-label="arama" name="s">
                    }
                    <button class="btn btn-outline-primary" type="submit">
                        Ara
                    </button>
                </form>
            </div>
            <div class="table-responsive text-nowrap">
                <table class="table table-hover table-striped table-bordered table-sm">
                    <thead>
                        <tr>
                            <th class="text-center">Ad Soyad</th>
                            <th class="text-center">Kullanıcı Adı</th>
                            <th class="text-center">E-Posta</th>
                            <th class="col-1 text-center">Profil Resim</th>
                            <th class="col-1 text-center">İş Sayısı</th>
                            <th class="col-1 text-center"></th>
                        </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                        @foreach (var item in Model.AppUserListDto)
                        {
                            <tr>
                                <td class="text-center">@(item.Name + " " + item.Surname)</td>
                                <td class="text-center">@item.Username</td>
                                <td class="text-center">@item.Email</td>
                                <td class="text-center">
                                    <ul class="list-unstyled users-list m-0 avatar-group d-flex align-items-center">
                                        <li data-bs-toggle="tooltip" data-popup="tooltip-custom" data-bs-placement="top" class="avatar avatar-xs pull-up" title="" data-bs-original-title="Lilian Fuller">
                                            <img src="/images/profiles/@item.ProfileImage" alt="@item.Username" class="rounded-circle">
                                        </li>
                                    </ul>
                                </td>
                                <td class="text-center"></td>
                                <td class="text-center">
                                    <button class="btn btn-outline-primary">
                                        İşi ata
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <nav aria-label="Page navigation">
                    <ul class="pagination">
                        @if (!string.IsNullOrEmpty(search))
                        {
                            for (int i = 1; i <= ViewBag.TotalPage; i++)
                            {
                                <li class="page-item @(ViewBag.ActivePage==i?"active":"")">
                                    <a class="page-link" asp-area="Admin" asp-controller="Working" asp-action="SetPersonel2"
                               asp-route-id="@Model.WorkingListDto.Id"
                               asp-route-activePage="@i"
                               asp-route-s="@search">
                                        @i
                                    </a>
                                </li>
                            }
                        }
                        else
                        {
                            for (int i = 1; i <= ViewBag.TotalPage; i++)
                            {
                                <li class="page-item @(ViewBag.ActivePage==i?"active":"")">
                                    <a class="page-link" asp-area="Admin" asp-controller="Working" asp-action="SetPersonel2"
                               asp-route-id="@Model.WorkingListDto.Id"
                               asp-route-activePage="@i">
                                        @i
                                    </a>
                                </li>
                            }
                        }
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>