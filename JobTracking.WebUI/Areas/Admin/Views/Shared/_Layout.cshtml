@{
    string active = null;
    if (TempData["MenuActive"] is not null)
    {
        active = TempData["MenuActive"].ToString();
    }
}
<!DOCTYPE html>
<html lang="tr"
      class="light-style layout-menu-fixed"
      dir="ltr"
      data-theme="theme-default"
      data-assets-path="/admin-theme/assets/"
      data-template="vertical-menu-template-free">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0" />
    <meta name="description" content="" />

    <title>@TempData["Title"] | JobTracking</title>

    <link rel="icon" type="image/x-icon" href="/admin-theme/assets/img/favicon/favicon.ico" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Public+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&display=swap" rel="stylesheet" />

    <link rel="stylesheet" href="/admin-theme/assets/vendor/fonts/boxicons.css" />
    <link rel="stylesheet" href="/admin-theme/assets/vendor/css/core.css" class="template-customizer-core-css" />
    <link rel="stylesheet" href="/admin-theme/assets/vendor/css/theme-default.css" class="template-customizer-theme-css" />
    <link rel="stylesheet" href="/admin-theme/assets/css/demo.css" />
    <link rel="stylesheet" href="/admin-theme/assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.css" />
    <link rel="stylesheet" href="/admin-theme/assets/vendor/libs/apex-charts/apex-charts.css" />
</head>

<body>
    <div class="layout-wrapper layout-content-navbar">
        <div class="layout-container">
            <aside id="layout-menu" class="layout-menu menu-vertical menu bg-menu-theme">
                <div class="app-brand demo">
                    <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="app-brand-link">
                        <span class="app-brand-text demo menu-text fw-bolder ms-2">
                            Görev App
                        </span>
                    </a>
                    <a href="javascript:void(0);" class="layout-menu-toggle menu-link text-large ms-auto d-block d-xl-none">
                        <i class="bx bx-chevron-left bx-sm align-middle"></i>
                    </a>
                </div>
                <div class="menu-inner-shadow"></div>
                <ul class="menu-inner py-1">
                    <li class="menu-item @(active=="Dashboard" ? "active" : "")">
                        <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="menu-link">
                            <i class="menu-icon tf-icons bx bxs-dashboard"></i>
                            <div>Dashboard</div>
                        </a>
                    </li>
                    <li class="menu-header small text-uppercase">
                        <span class="menu-header-text">Profil İşlemleri</span>
                    </li>
                    <li class="menu-item @(active=="Profile" ? "active" : "")">
                        <a asp-area="Member" asp-controller="Profile" asp-action="Index" class="menu-link">
                            <i class='menu-icon tf-icons bx bx-user'></i>
                            <div>Profil Detay</div>
                        </a>
                    </li>
                    <li class="menu-header small text-uppercase">
                        <span class="menu-header-text">İşlemler</span>
                    </li>
                    <li class="menu-item @(active == "Categories" ? "active" : "")">
                        <a asp-area="Admin" asp-controller="Category" asp-action="List" class="menu-link">
                            <i class="menu-icon tf-icons bx bx-bookmarks"></i>
                            <div>Kategoriler</div>
                        </a>
                    </li>
                    <li class="menu-item @(active == "Working" ? "active" : "")">
                        <a asp-area="Admin" asp-controller="Working" asp-action="List" class="menu-link">
                            <i class="menu-icon tf-icons bx bxs-notepad"></i>
                            <div>Görevler</div>
                        </a>
                    </li>
                    <li class="menu-item @(active == "WorkOrder" ? "active" : "")">
                        <a asp-area="Admin" asp-controller="Working" asp-action="GetAllTable" class="menu-link">
                            <i class="menu-icon tf-icons bx bxs-book-content"></i>
                            <div>Görev Ata</div>
                        </a>
                    </li>
                </ul>
            </aside>
            <div class="layout-page">
                @await Component.InvokeAsync("Wrapper")

                <div class="content-wrapper">
                    @RenderBody()

                    <footer class="content-footer footer bg-footer-theme">
                        <div class="container-xxl d-flex flex-wrap justify-content-between py-2 flex-md-row flex-column">
                            <div class="mb-2 mb-md-0">
                                JobTracking @DateTime.Now.Year | Tüm hakları saklıdır.
                            </div>
                        </div>
                    </footer>
                </div>
            </div>
        </div>
    </div>
    <script src="/admin-theme/assets/vendor/libs/jquery/jquery.js"></script>
    <script src="/admin-theme/assets/vendor/libs/popper/popper.js"></script>
    <script src="/admin-theme/assets/vendor/js/bootstrap.js"></script>
    <script src="/admin-theme/assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.js"></script>
    <script src="/admin-theme/assets/vendor/js/menu.js"></script>
    <script src="/admin-theme/assets/vendor/libs/apex-charts/apexcharts.js"></script>
    <script src="/admin-theme/assets/js/main.js"></script>
    <script src="/admin-theme/assets/js/dashboards-analytics.js"></script>

    @await Component.InvokeAsync("Notyf")
    @await RenderSectionAsync("Scripts",false)
</body>
</html>
