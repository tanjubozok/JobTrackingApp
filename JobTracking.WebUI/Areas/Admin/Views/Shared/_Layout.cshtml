
<!DOCTYPE html>
<html lang="tr"
      class="light-style layout-menu-fixed"
      dir="ltr"
      data-theme="theme-default"
      data-assets-path="/admin-theme/assets/"
      data-template="vertical-menu-template-free">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0" />
    <meta name="description" content="" />

    <title>@TempData["Title"] | JobTracking</title>

    <link rel="icon" type="image/x-icon" href="/admin-theme/assets/img/favicon/favicon.ico" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Public+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&display=swap" rel="stylesheet" />

    <link rel="stylesheet" href="/admin-theme/assets/vendor/fonts/boxicons.css" />
    <link rel="stylesheet" href="/admin-theme/assets/vendor/css/core.css" class="template-customizer-core-css" />
    <link rel="stylesheet" href="/admin-theme/assets/vendor/css/theme-default.css" class="template-customizer-theme-css" />
    <link rel="stylesheet" href="/admin-theme/assets/css/demo.css" />
</head>

<body>
    <div class="layout-wrapper layout-content-navbar">
        <div class="layout-container">

            @await Component.InvokeAsync("Wrapper")

            <div class="layout-page">
                <div class="content-wrapper">
                    @RenderBody()

                    <footer class="content-footer footer bg-footer-theme">
                        <div class="container-xxl d-flex flex-wrap justify-content-between py-2 flex-md-row flex-column">
                            <div class="mb-2 mb-md-0">
                                JobTracking @DateTime.Now.Year | Tüm hakları saklıdır.
                            </div>
                        </div>
                    </footer>
                </div>
            </div>
        </div>
    </div>
    <script src="/admin-theme/assets/vendor/libs/jquery/jquery.js"></script>
    <script src="/admin-theme/assets/vendor/libs/popper/popper.js"></script>
    <script src="/admin-theme/assets/vendor/js/bootstrap.js"></script>
    <script src="/admin-theme/assets/vendor/js/menu.js"></script>
    <script src="/admin-theme/assets/js/main.js"></script>

    @await Component.InvokeAsync("Notyf")
    @await RenderSectionAsync("Scripts",false)
</body>
</html>
