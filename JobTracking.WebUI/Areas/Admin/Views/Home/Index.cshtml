@model HomeIndexViewModel
@{
    TempData["Title"] = "Dashboard";
}
<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row">
        <div class="col-lg-6 mb-4 order-0">
            <div class="card bg-secondary text-white">
                <div class="d-flex align-items-end row">
                    <div class="col-sm-6">
                        <div class="card-body">
                            <h5 class="card-title text-white">
                                Atanmamış Görev Sayısı
                            </h5>
                            <p class="mb-4">
                                <strong>@Model.NumberOfTaskPendingAssignment</strong>
                            </p>
                        </div>
                    </div>
                    <div class="col-sm-6 text-center text-sm-left">
                        <div class="card-body pb-0 px-0 px-md-4">
                            <img src="/admin-theme/assets/img/illustrations/man-with-laptop-light.png" height="140" alt="View Badge User" data-app-dark-img="illustrations/man-with-laptop-dark.png" data-app-light-img="illustrations/man-with-laptop-light.png">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6 mb-4 order-0">
            <div class="card bg-info text-white">
                <div class="d-flex align-items-end row">
                    <div class="col-sm-6">
                        <div class="card-body">
                            <h5 class="card-title text-white">
                                Tamamlanmış Görev Sayısı
                            </h5>
                            <p class="mb-4">
                                <strong>@Model.NumberOfCompletedTask</strong>
                            </p>
                        </div>
                    </div>
                    <div class="col-sm-6 text-center text-sm-left">
                        <div class="card-body pb-0 px-0 px-md-4">
                            <img src="/admin-theme/assets/img/illustrations/man-with-laptop-light.png" height="140" alt="View Badge User" data-app-dark-img="illustrations/man-with-laptop-dark.png" data-app-light-img="illustrations/man-with-laptop-light.png">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6 mb-4 order-0">
            <div class="card bg-warning text-white">
                <div class="d-flex align-items-end row">
                    <div class="col-sm-6">
                        <div class="card-body">
                            <h5 class="card-title text-white">
                                Okunmamış Bildirim Sayısı
                            </h5>
                            <p class="mb-4">
                                <strong>@Model.NumberOfUnreadNotification</strong>
                            </p>
                        </div>
                    </div>
                    <div class="col-sm-6 text-center text-sm-left">
                        <div class="card-body pb-0 px-0 px-md-4">
                            <img src="/admin-theme/assets/img/illustrations/man-with-laptop-light.png" height="140" alt="View Badge User" data-app-dark-img="illustrations/man-with-laptop-dark.png" data-app-light-img="illustrations/man-with-laptop-light.png">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6 mb-4 order-0">
            <div class="card bg-success text-white">
                <div class="d-flex align-items-end row">
                    <div class="col-sm-6">
                        <div class="card-body">
                            <h5 class="card-title text-white">
                                Toplam Rapor Sayısı
                            </h5>
                            <p class="mb-4">
                                <strong>@Model.TotalNumberOfWrittenReport</strong>
                            </p>
                        </div>
                    </div>
                    <div class="col-sm-6 text-center text-sm-left">
                        <div class="card-body pb-0 px-0 px-md-4">
                            <img src="/admin-theme/assets/img/illustrations/man-with-laptop-light.png" height="140" alt="View Badge User" data-app-dark-img="illustrations/man-with-laptop-dark.png" data-app-light-img="illustrations/man-with-laptop-light.png">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>