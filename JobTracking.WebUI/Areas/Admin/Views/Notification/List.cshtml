@model List<NotificationListDto>
@{
    TempData["Title"] = "Kategoriler";
    int counter = 0;
}
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-1">
        <span class="text-muted fw-light">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="text-dark">
                Dashboard /
            </a>
        </span>
        @TempData["Title"]
    </h4>
    <div class="card">
        @if (Model.Count > 0)
        {
            <div class="table-responsive text-nowrap">
                <table class="table table-hover table-striped table-bordered">
                    <thead>
                        <tr>
                            <th class="col-1 text-center">Id</th>
                            <th>Tanım</th>
                            <th class="col-1 text-center">İşlem</th>
                        </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                        @foreach (var item in Model)
                        {
                            counter++;
                            <tr>
                                <td class="text-center">@counter</td>
                                <td>@item.Description</td>
                                <td class="text-center">
                                    <a asp-area="Admin" asp-controller="Notification" asp-action="DoneNotification" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                        <i class='bx bx-edit'></i>
                                        Okundu
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="card-body p-3">
                <div class="alert alert-warning text-dark" role="alert">
                    <i class='bx bx-check'></i>
                    Okunamamış bildirim bulunamadı.
                </div>
            </div>
        }
    </div>
</div>